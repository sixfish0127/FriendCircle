@{
    Layout = "_Layout";
}

<div class="dashboard">
    <!-- 總數區域 -->
    <div class="summary-section">
        <!-- 好友數 -->
        <div class="summary-card">
            <i class="fas fa-users"></i>
            <h2 id="total-followers">0</h2>
            <p>好友數</p>
        </div>
        <!-- 按讚數 -->
        <div class="summary-card">
            <i class="fas fa-thumbs-up"></i>
            <h2 id="total-likes">0</h2>
            <p>按讚數</p>
        </div>
        <!-- 貼文數 -->
        <div class="summary-card">
            <i class="fas fa-file-alt"></i>
            <h2 id="total-posts">0</h2>
            <p>貼文數</p>
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<!-- 引入外部 CSS -->
<link href="/css/dashboard.css" rel="stylesheet">

<!-- JavaScript -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // 呼叫後端 API 獲取數據
        fetch('/Analysis/AnalyzeData')
            .then(response => response.json())
            .then(data => {
                // 更新卡片數據
                document.getElementById("total-followers").innerText = data.total_followers;
                document.getElementById("total-likes").innerText = data.total_likes;
                document.getElementById("total-posts").innerText = data.total_posts;
            })
            .catch(error => {
                console.error("Error fetching data:", error);
                alert("無法加載數據，請稍後重試。");
            });
    });
</script>